
#include <Wire.h> //Biblioteca utilizada gerenciar a comunicação entre dispositicos através do protocolo I2C
#include <LiquidCrystal_I2C.h> //Biblioteca controlar display 16x2 através do I2C

#define col  16 //Define o número de colunas do display utilizado
#define lin   2 //Define o número de linhas do display utilizado
#define ende  34 //Define o endereço do display

LiquidCrystal_I2C lcd(ende, col, lin); //Cria o objeto lcd passando como parâmetros o endereço, o nº de colunas e o nº de linhas
int valor=1;
bool ligado=false;

void setup() {
  lcd.init(); //Inicializa a comunicação com o display já conectado
  lcd.clear(); //Limpa a tela do display
  lcd.backlight(); //Aciona a luz de fundo do display
  lcd.display();// Liga Display:
  Serial.begin(9600);
}

void loop() {
  while(ligado!=true){
    lcd.setCursor(0, 0); //Coloca o cursor do display na coluna 1 e linha 1
    lcd.print("Inserir a Temperatura:");
    lcd.setCursor(0, 1); //Coloca o cursor do display na coluna 1 e linha 1
    lcd.print(valor);
      for(int posi_LCD = 0; posi_LCD < 72; posi_LCD ++)
      {
        lcd.setCursor(16,1);
    	lcd.scrollDisplayLeft();  //Essa é a função que faz as letras se deslocarem
    	delay(250);
      }
    Serial.print(ligado);
    ligado=true;
    if (ligado==true){
      lcd.clear();
    }  
  }
  valor++;
  lcd.setCursor(0, 0); //Coloca o cursor do display na coluna 1 e linha 1
  lcd.print("Temperatura:"+String(valor)+"C");//Exibe a mensagem na primeira linha do display
  lcd.setCursor(0, 1); //Coloca o cursor do display na coluna 1 e linha 2
  lcd.print("Umidade:");  //Exibe a mensagem na segunda linha do display
  lcd.print(50);
  
}
  
